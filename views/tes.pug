doctype html
html 
    head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
    
    body
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email' name='email' placeholder='Email address' required='' autofocus='')
      label.sr-only(for='inputPassword')  Password
      input#inputPassword.form-control(type='password' name='password' placeholder='Password' required='')
      button(type='button' id='play-button')  Sign in 

    script.

        document.getElementById('play-button').addEventListener('click', async () => {
          console.log('ready');
            try {
                const email = document.getElementById('inputEmail').value;
                const password = document.getElementById('inputPassword').value;

                const res = await fetch('http://127.0.0.1:8000/api/sign-in', {
                    method: 'POST',
                    headers: {
                    'Content-Type': 'application/json'
                    // 'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: JSON.stringify({email, password})
                });
                
                const data = await res.json();
                console.log(data);  
            } catch (err) {
                console.log(err);
            }
        });
        