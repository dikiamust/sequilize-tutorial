doctype html
html 
    head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
    script.
        document.querySelector('.form').addEventListener('submit', e => {
        e.preventDefault();
        const email = document.getElementById('inputEmail').value;
        const password = document.getElementById('inputPassword').value;
        login(email, password);
        });

        const login = async (email, password) => {
        try {
            const res = await fetch({
                method: 'POST',
                url: 'http://127.0.0.1:4000/api/sign-in',
                data: {
                email,
                password
                }}).then(response => response.json())    // one extra step
                   .then(data => { console.log(data)})
            
            console.log(res);   
        } catch (err) {
            console.log(err.response.data);
        }
        }
    body
      form.form-signin(@keyup='login')
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email' name='email' placeholder='Email address' required='' autofocus='')
      label.sr-only(for='inputPassword')  Password
      input#inputPassword.form-control(type='password' name='password' placeholder='Password' required='')
      button(type='submit')  Sign in 
